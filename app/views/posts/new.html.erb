<h2>スケジュール新規登録</h2>

<%= render "shared/error", obj: @post %>

<%= form_with model: @post do |f| %>
<table>
<tr>
<th><%= f.label :title, "タイトル" %></th>
<td><%= f.text_field :title %></td>
</tr>

<tr>
<th><%= f.label :start_date_at, "開始日" %></th>
<td><%= f.date_field :start_date_at %></td>
</tr>

<tr>
<th><%= f.label :end_date_at, "終了日" %></th>
<td><%= f.date_field :end_date_at %></td>
</tr>

<tr>
<th><%= f.label :all_day, "終日" %></th>
<td>
<%= f.check_box :all_day %>
<p>終日の場合にはチェックを入れます</p>
</td>
</tr>

<tr>
<th><%= f.label :memo, "メモ" %></th>
<td><%= f.text_area :memo %></td>
</tr>
</table>

<div>
<ul>
<li><%= f.submit "登録を完了する"%></li>
<li><%= link_to "スケジュール情報一覧に戻る", :posts %></li>
</ul>
</div>
<% end %>