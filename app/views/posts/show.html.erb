<h3>スケジュール詳細</h3>

<table>
<tr>
<th>タイトル</th>
<td><%= @post.title %></td>
</tr>
<tr>
<th>開始日</th>
<td><%= @post.start_date_at %></td>
</tr>
<tr>
<th>投稿日</th>
<td><%= @post.created_at.to_s(:datetime_jp) %></td>
</tr>
<tr>
<th>メモ</th>
<td><%= @post.memo %></td>
</tr>
</table>

<div>
      <ul>
        <li><%= link_to "スケジュール情報一覧に戻る", :posts %></li>
        <li><%= link_to "スケジュールを編集する", [:edit, @post] %></li>
        <li><%= link_to "スケジュールを削除する", @post, method: :delete, data: { confirm: "本当に削除しますか？" } %></li>
      </ul>
    </div>